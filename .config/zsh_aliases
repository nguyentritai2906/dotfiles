alias ..='cd ..'
alias hg='history | grep'
alias la='ls -A'
alias lg='ll | grep'
alias ll='ls -ahlF'
alias ls='ls -CF --color=auto'
alias mv='mv -i'
alias note='cd ~/Documents/note/ && ll'
alias open='xdg-open'
alias rm='rm -I'
alias suvim='sudo -E vim'
alias alaconf="vim ~/.config/alacritty/alacritty.yml"
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias i3conf="vim ~/.config/i3/config"
alias polyconf="vim ~/.config/polybar/config.ini"
alias tmuxconf="vim ~/.tmux/.tmux.conf"
alias tmuxconflc="vim ~/.tmux.conf.local"
alias vimconf="vim ~/.vimrc"
alias zshconf="vim ~/.zshrc"
alias bat="bat --style=numbers --color=always "
alias confs="config status"
alias confd="config diff"
alias confa="config add"
alias confc="config commit -m"
alias confca="config commit -am"
